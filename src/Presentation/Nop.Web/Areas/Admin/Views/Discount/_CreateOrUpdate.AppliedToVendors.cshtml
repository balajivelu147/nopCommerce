@model DiscountModel

@if (Model.Id > 0)
{
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
        {
            Name = "vendors-grid",
            UrlRead = new DataUrl("VendorList", "Discount", new RouteValueDictionary { [nameof(Model.DiscountVendorSearchModel.DiscountId)] = Model.DiscountVendorSearchModel.DiscountId }),
            UrlDelete = new DataUrl("VendorDelete", "Discount", new RouteValueDictionary { [nameof(Model.DiscountVendorSearchModel.DiscountId)] = Model.DiscountVendorSearchModel.DiscountId }),
            BindColumnNameActionDelete = nameof(DiscountVendorModel.VendorId),
            Length = Model.DiscountVendorSearchModel.PageSize,
            LengthMenu = Model.DiscountVendorSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
                new ColumnProperty(nameof(DiscountVendorModel.VendorName))
                {
                    Title = T("Admin.Promotions.Discounts.AppliedToVendors.Vendor").Text
                },
                new ColumnProperty(nameof(DiscountVendorModel.VendorId))
                {
                    Title = T("Admin.Common.View").Text,
                    Width = "150",
                    ClassName =  NopColumnClassDefaults.Button,
                    Render = new RenderButtonView(new DataUrl("~/Admin/Vendor/Edit/"))
                }
                //,
                //new ColumnProperty(nameof(DiscountVendorModel.VendorId))
                //{
                //    Title = T("Admin.Common.Delete").Text,
                //    Width = "150",
                //    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                //    ClassName =  NopColumnClassDefaults.Button
                //}
            }
        })
    </div>
    <div class="card-footer">
        <button type="submit" id="btnAddNewVendor" onclick="javascript:OpenWindow('@(Url.Action("VendorAddPopup", "Discount", new { discountId = Model.Id, btnId = "btnRefreshVendors", formId = "discount-form" }))', 800, 800, true); return false;" class="btn btn-primary">
            @T("Admin.Promotions.Discounts.AppliedToVendors.AddNew")
        </button>
        <button type="submit" id="btnRefreshVendors" style="display: none"></button>
        <script>
            $(document).ready(function () {
                $('#btnRefreshVendors').click(function () {
                    //refresh grid
                    updateTable('#vendors-grid');

                    //return false to don't reload a page
                    return false;
                });
            });
        </script>
    </div>
}
else
{
    <div class="card-body">
        @T("Admin.Promotions.Discounts.AppliedToVendors.SaveBeforeEdit")
    </div>
}